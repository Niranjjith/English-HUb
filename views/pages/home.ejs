<%- include("../partials/header") %>

<!-- Hero Section -->
<section class="hero-section text-white text-center py-5"
  style="background: linear-gradient(135deg, #1a73e8, #004ba0); position: relative; overflow: hidden;">
  <div class="container py-5 position-relative">
    <h1 class="display-5 fw-bold mb-3">Master English with Confidence</h1>
    <p class="lead mb-4">Interactive lessons, fun quizzes, and everything you need to improve your English skills.</p>
    <a href="/lessons" class="btn btn-warning btn-lg px-5 fw-semibold shadow">Start Learning</a>
  </div>
  <div class="wave" style="position: absolute; bottom: 0; width: 100%;">
    <svg viewBox="0 0 1440 320"><path fill="#fff" fill-opacity="1"
        d="M0,160L40,176C80,192,160,224,240,229.3C320,235,400,213,480,176C560,139,640,85,720,90.7C800,96,880,160,960,165.3C1040,171,1120,117,1200,117.3C1280,117,1360,171,1400,197.3L1440,224L1440,320L1400,320C1360,320,1280,320,1200,320C1120,320,1040,320,960,320C880,320,800,320,720,320C640,320,560,320,480,320C400,320,320,320,240,320C160,320,80,320,40,320L0,320Z">
      </path></svg>
  </div>
</section>

<!-- Latest Lessons -->
<section class="container my-5">
  <h2 class="text-center fw-bold text-primary mb-4">Latest Lessons</h2>
  <div class="row justify-content-center">
    <% lessons.forEach(lesson => { %>
      <div class="col-md-4 mb-4">
        <div class="card lesson-card shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title text-primary fw-semibold"><%= lesson.title %></h5>
            <p class="card-text text-muted"><%= lesson.content.substring(0, 120) %>...</p>
            <a href="/lessons" class="btn btn-outline-primary btn-sm">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- Why Learn English Section -->
<section class="bg-light py-5">
  <div class="container text-center">
    <h2 class="fw-bold text-primary mb-4">Why Learn English with Us?</h2>
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="p-4 shadow-sm bg-white rounded-4 h-100">
          <div class="icon mb-3 text-primary fs-1"><i class="bi bi-book-half"></i></div>
          <h5 class="fw-semibold mb-2">Structured Lessons</h5>
          <p class="text-muted small">Carefully crafted grammar and vocabulary modules designed for college learners.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="p-4 shadow-sm bg-white rounded-4 h-100">
          <div class="icon mb-3 text-primary fs-1"><i class="bi bi-magic"></i></div>
          <h5 class="fw-semibold mb-2">Interactive Quizzes</h5>
          <p class="text-muted small">Test your skills instantly and get feedback that helps you grow fast.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="p-4 shadow-sm bg-white rounded-4 h-100">
          <div class="icon mb-3 text-primary fs-1"><i class="bi bi-people-fill"></i></div>
          <h5 class="fw-semibold mb-2">Built for Students</h5>
          <p class="text-muted small">Designed to make learning English fun, engaging, and rewarding for college students.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="cta-section text-white text-center py-5" style="background: linear-gradient(135deg, #004ba0, #1a73e8);">
  <div class="container">
    <h2 class="fw-bold mb-3">Start Your English Journey Today!</h2>
    <p class="lead mb-4">Join thousands of learners improving their English daily.</p>
    <a href="/quiz" class="btn btn-light btn-lg px-5 fw-semibold">Take a Quiz</a>
  </div>
</section>

<%- include("../partials/footer") %>

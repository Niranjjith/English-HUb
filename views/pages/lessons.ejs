<%- include("../partials/header") %>

<div class="container mt-5">
  <h2 class="text-center text-primary mb-4">Explore All Lessons</h2>
  <div class="row">
    <% lessons.forEach(lesson => { %>
      <div class="col-md-6 mb-4">
        <div class="card lesson-card p-4">
          <h5 class="text-dark fw-semibold"><%= lesson.title %></h5>
          <p><%= lesson.content %></p>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include("../partials/footer") %>
